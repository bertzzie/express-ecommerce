html
    head
        block title
            title E-Commerce

        link(rel="stylesheet", href="/static/styles/main.css")

        block moreStyle
            link(rel="stylesheet", href="/static/styles/showcase.css")
            link(rel="stylesheet", href="/static/styles/forms.css")

    body
        header#main-header
            nav#main-nav(role="navigation")
                a#logo(href="/") E-Commerce
                ul.horizontal-menu
                    li.menu-item: a(href="/about") About
                    if loggedin
                        include login-menu.jade
                        li.menu-item: a(href="/auth/logout") Logout
                    else
                        li.menu-item: a(href="/auth/login") Login
                        li.menu-item: a(href="/auth/register") Register

        #main-container
            if flashError
                div.flash-error= flashError
            if flashInfo
                div.flash-info= flashInfo

            block content
                include product/showcase.jade

        footer#main-footer
            aside
                h4 Links
                ul.veritcal-menu
                    li.menu-item: a(href="/") Satu
                    li.menu-item: a(href="/") Dua
                    li.menu-item: a(href="/") Tiga
            aside#copyright
                p &copy; Someone 2015
        
